<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!-- Définition du servlet pour rechercher les annonces -->
<servlet>
    <servlet-name>RechercheServlet</servlet-name>
    <servlet-class>org.example.servlets.RechercheServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>RechercheServlet</servlet-name>
    <url-pattern>/recherche</url-pattern>
</servlet-mapping>

<!-- Définition du servlet pour afficher les détails d'une annonce -->
<servlet>
    <servlet-name>AnnonceServlet</servlet-name>
    <servlet-class>org.example.servlets.AnnonceServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AnnonceServlet</servlet-name>
    <url-pattern>/annoncesDetails</url-pattern>
</servlet-mapping>

<!-- Fichier de bienvenue -->
<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

</web-app>
